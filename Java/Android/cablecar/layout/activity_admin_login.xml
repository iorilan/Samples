<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fuyan.test.Activities.AdminLoginActivity">

    <TextView android:text="Admin Login" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLogin"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAdminLoginUserName"
        android:hint="Enter Name"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:lines="1"
        android:focusable="true"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#191819"
        android:layout_marginTop="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtAdminLoginPwd"
        android:layout_below="@+id/txtAdminLoginUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtAdminLoginUserName"
        android:layout_alignEnd="@+id/txtAdminLoginUserName"
        android:textColorHint="#151415"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:lines="1"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/btnAdminLogin"
        android:layout_below="@+id/txtAdminLoginPwd"
        android:layout_alignRight="@+id/lblLogin"
        android:layout_alignEnd="@+id/lblLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnAdminLoginBack"
        android:layout_alignTop="@+id/btnAdminLogin"
        android:layout_alignLeft="@+id/lblLogin"
        android:layout_alignStart="@+id/lblLogin" />

</RelativeLayout>
