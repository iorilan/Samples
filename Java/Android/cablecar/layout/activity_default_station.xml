<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.DefaultStationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line Name"
        android:textSize="30dp"
        android:id="@+id/lblDefaultLineName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Station Name"
        android:textSize="30dp"
        android:id="@+id/lblDefaultStationName"
        android:layout_below="@+id/lblDefaultLineName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/btnDefaultStationContinue"
        android:layout_below="@+id/lblDefaultDirection"
        android:layout_toLeftOf="@+id/btnDefaultLocationUpdate"
        android:layout_toStartOf="@+id/btnDefaultLocationUpdate"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/btnDefaultLocationUpdate"
        android:layout_alignTop="@+id/btnDefaultStationContinue"
        android:layout_alignRight="@+id/lblDefaultStationName"
        android:layout_alignEnd="@+id/lblDefaultStationName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:textSize="30dp"
        android:id="@+id/lblDefaultDirection"
        android:layout_below="@+id/lblDefaultStationName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />
</RelativeLayout>
