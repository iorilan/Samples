<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".Activities.TicketAnalysisActivity">
    <TextView
        android:text="Ticket Analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblWelcome"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/lblTicketCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#25383C"
        android:textSize="17sp"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="TicketCode"
        android:elegantTextHeight="false" />
    <TextView
        android:id="@+id/lblProductName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#25383C"
        android:textSize="17sp"
        android:text="ProductName"
        android:elegantTextHeight="false"
        android:layout_below="@+id/lblTicketCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#25383C"
        android:textSize="17sp"
        android:layout_below="@+id/lblProductName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Status" />

    <TextView
        android:id="@+id/lblUsageDetails"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textColor="#25383C"
        android:textSize="17sp"
        android:text=""
        android:maxLines="200"
        android:scrollbars="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblUsage"
        android:layout_above="@+id/btnManual" />

    <TextView
        android:id="@+id/lblUsage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#25383C"
        android:textSize="17sp"
        android:text="Usage"
        android:layout_below="@+id/lblStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtScanning"
        android:layout_above="@id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="8sp"
        android:cursorVisible="false"
        android:background="@android:color/transparent"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtTicketNum"
        android:visibility="invisible"
        android:maxLength="20"
        android:layout_below="@+id/txtScanning"
        android:layout_toLeftOf="@+id/btnManual"
        android:layout_toStartOf="@+id/btnManual" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual"
        android:id="@+id/btnManual"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

